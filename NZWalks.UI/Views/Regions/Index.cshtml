@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Regions</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="AddRegion">Add Region</a>
</div>
<table class="table table-bordered ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
            </tr>
        }
    </tbody>
</table>